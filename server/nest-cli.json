{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      {"include": "../config/*.yaml", "outDir": "./dist/config"}
    ],
    "watchAssets": true,
    "manualRestart": true
  }
}
